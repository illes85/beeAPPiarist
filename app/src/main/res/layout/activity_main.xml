    <ImageButton
        android:id="@+id/btHive1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bee_hive_02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89" />

    <TextView
        android:id="@+id/tv_hive_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btHive1"
        app:layout_constraintEnd_toEndOf="@+id/btHive1"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="@+id/btHive1"
        app:layout_constraintTop_toTopOf="@+id/btHive1"
        app:layout_constraintVertical_bias="0.552"
        tools:text="#num" />

    <ToggleButton
        android:id="@+id/iconQueen"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/icon_queen"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toTopOf="@+id/iconWorm"
        app:layout_constraintEnd_toStartOf="@+id/btHive1" />

    <ToggleButton
        android:id="@+id/iconFood"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/icon_food"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toTopOf="@+id/iconHoney"
        app:layout_constraintEnd_toStartOf="@+id/btHive1" />

    <ToggleButton
        android:id="@+id/iconWorm"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/icon_worm"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toTopOf="@+id/iconFood"
        app:layout_constraintEnd_toStartOf="@+id/btHive1" />

    <ToggleButton
        android:id="@+id/iconHoney"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/icon_honey"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toTopOf="@+id/iconWarning"
        app:layout_constraintEnd_toStartOf="@+id/btHive1" />

    <ToggleButton
        android:id="@+id/iconWarning"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/icon_warning"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/btHive1"
        app:layout_constraintEnd_toStartOf="@+id/btHive1" />

    <ImageButton
        android:id="@+id/btNextHive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bee_hive_02_smaller"
        app:layout_constraintBottom_toBottomOf="@+id/btHive1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btHive1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#8680;\nnext"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/btNextHive"
        app:layout_constraintEnd_toEndOf="@+id/btNextHive"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@+id/btNextHive"
        app:layout_constraintTop_toTopOf="@+id/btNextHive"
        app:layout_constraintVertical_bias="0.49" />

    <ImageButton
        android:id="@+id/btPrevHive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bee_hive_02_smaller"
        app:layout_constraintBottom_toBottomOf="@+id/btNextHive"
        app:layout_constraintEnd_toStartOf="@+id/btHive1"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#8678;\nprev"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/btPrevHive"
        app:layout_constraintEnd_toEndOf="@+id/btPrevHive"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@+id/btPrevHive"
        app:layout_constraintTop_toTopOf="@+id/btPrevHive"
        app:layout_constraintVertical_bias="0.49" />


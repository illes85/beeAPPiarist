    <Spinner
        android:id="@+id/spinner_hives"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/spinner_background"
        android:entries="@array/Hives"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btHive1"
        app:layout_constraintVertical_bias="0.0" />

    <!-- 1st popup -->
    <GridLayout
        android:id="@+id/grid_layout_hive_inside"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btHive1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTelep"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="8dp"
            android:src="@drawable/icon_strength_01" />

        <TextView
            android:layout_columnSpan="3"
            android:layout_marginLeft="75dp"
            android:text="Family strength: -------"
            android:textColor="@android:color/holo_orange_light" />

        <!-- weak 33%, average 66%, strong 100% -->
        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="285dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_gravity="top|left"
            android:progress="66"
            android:progressTint="@android:color/holo_orange_light" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_rowSpan="2"
            android:src="@mipmap/frames_with_bees_01" />

        <TextView
            android:layout_columnSpan="3"
            android:layout_marginLeft="75dp"
            android:text="Frames with bees:  0 / 0"
            android:textColor="@android:color/holo_orange_light" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="285dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_gravity="top|left"
            android:progress="50"
            android:progressTint="@android:color/holo_orange_light" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_rowSpan="2"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/frames_in_hive_01" />

        <TextView
            android:layout_columnSpan="3"
            android:layout_marginLeft="75dp"
            android:text="Frame slots used:  0 /0"
            android:textColor="@android:color/holo_orange_light" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="285dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_gravity="top|left"
            android:progress="66"
            android:progressTint="@android:color/holo_orange_light" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="6"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/queen_on" />

        <TextView
            android:layout_rowSpan="2"
            android:layout_columnSpan="3"
            android:layout_marginLeft="75dp"
            android:text="Queen: - years old"
            android:textColor="@android:color/holo_orange_light" />

        <!-- 4th row (6-7th) -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="8"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@drawable/worm_on" />

        <TextView
            android:layout_rowSpan="2"
            android:layout_columnSpan="3"
            android:layout_marginLeft="75dp"
            android:text="Fiasítás: - - -"
            android:textColor="@android:color/holo_orange_light" />

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="10"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/honey_on" />

        <TextView
            android:layout_rowSpan="2"
            android:layout_columnSpan="3"
            android:layout_marginLeft="75dp"
            android:text="Honey: -- kg"
            android:textColor="@android:color/holo_orange_light" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="12"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@drawable/food_on" />

        <TextView
            android:layout_rowSpan="2"
            android:layout_columnSpan="3"
            android:layout_marginLeft="75dp"
            android:text="Last fed at: ---- -- -- (- days ago)"
            android:textColor="@android:color/holo_orange_light" />

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="14"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/icon_warning_on" />

        <TextView
            android:layout_rowSpan="2"
            android:layout_columnSpan="3"
            android:layout_marginLeft="75dp"
            android:text="Warnings: nothing"
            android:textColor="@android:color/holo_orange_light" />

        <Button
            android:id="@+id/button_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:text="prev"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/button_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="more" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="back" />
    </GridLayout>


    <!-- 2nd popup -->
    <GridLayout
        android:id="@+id/grid_layout_hive_inside_2nd_page"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btHive1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTelep"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/button_prev2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="prev"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_more2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="more"
            android:textColor="@android:color/darker_gray"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="bottom"
            android:text="back" />

    </GridLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:onClick="newHive"
        app:layout_constraintBottom_toTopOf="@+id/btNextHive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:srcCompat="@android:drawable/ic_menu_add" />


</android.support.constraint.ConstraintLayout>